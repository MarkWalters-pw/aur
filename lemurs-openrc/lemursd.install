post_install() {
        echo " ==> Add the lemurs daemon to system startup with 'rc-update add jellyfind default'"
        echo " ==> Start the lemurs daemon now with 'rc-service jellyfind start'"
}

post_upgrade() {
        post_install "$1"
}

pre_remove() {
        echo " ==> Make sure you run 'rc-update del lemursd default'"
}
