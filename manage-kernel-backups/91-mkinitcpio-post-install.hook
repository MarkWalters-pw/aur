[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Target = usr/lib/modules/*/vmlinuz
Target = usr/lib/initcpio/*
Target = usr/lib/firmware/*
Target = usr/src/*/dkms.conf

[Action]
Description = Updating initcpio backups
When = PostTransaction
Exec = /usr/share/libalpm/scripts/manage_kernel_backup.sh mkinitcpio
NeedsTargets
