#!/bin/bash
cd "$HOME/.cache/" || exit



if [[ -d "$HOME/.cache/tf2cdownloader" ]];
then
	cd tf2cdownloader
else
	mkdir tf2cdownloader && cd tf2cdownloader
fi
ln -s "/usr/share/tf2cdownloader/tf2cdownloader" "$HOME/.cache/tf2cdownloader/tf2cdownloader"
"$HOME/.cache/tf2cdownloader/tf2cdownloader"
wait
rm "$HOME/.cache/tf2cdownloader/tf2cdownloader"
exit
