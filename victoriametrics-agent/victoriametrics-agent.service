[Unit]
Description=Fast, cost-effective and scalable time series database
Documentation=https://victoriametrics.github.io/
After=network.target

[Service]
DynamicUser=true
LogsDirectory=victoriametrics-agent
StateDirectory=victoriametrics-agent

AmbientCapabilities=
CapabilityBoundingSet=
LockPersonality=true
ProtectControlGroups=true
ProtectKernelModules=true
ProtectKernelTunables=true
ProtectHome=true
PrivateDevices=true
NoNewPrivileges=true
MemoryDenyWriteExecute=true

User=victoriametrics
Group=victoriametrics
EnvironmentFile=/etc/default/victoriametrics-agent
ExecStart=/usr/bin/vmagent -remoteWrite.tmpDataPath=/var/lib/victoriametrics-agent $ARGS
LimitNOFILE=65536
LimitNPROC=32000

[Install]
WantedBy=multi-user.target
